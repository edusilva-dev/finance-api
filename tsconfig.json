{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",

    /* Modules */
    "module": "commonjs",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Path */
    "baseUrl": "./",
    "paths": {
      "@*": ["./src/*"]
    }
  }
}
